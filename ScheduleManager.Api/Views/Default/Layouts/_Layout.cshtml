<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <environment names="Development">
        <link rel="stylesheet" href="~/content/css/lib/materialize.css" />
        <link rel="stylesheet" href="~/content/css/site.css" />
    </environment>
    <environment names="Live">
        <link rel="stylesheet" href="~/content/css/lib/materialize.min.css" />
        <link rel="stylesheet" href="~/content/css/site.min.css" />
    </environment>
</head>
<body class="grey lighten-4">
    <header>
        @await Component.InvokeAsync("Navigation")
    </header>
    <div class="content">
        @RenderBody()
    </div>

    <environment names="Development">
        <script defer src="~/content/script/lib/jquery-3.3.1.js"></script>
        <script defer src="~/content/script/lib/jquery.validate.unobtrusive-3.2.10.min.js"></script>
        <script defer src="~/content/script/lib/materialize.js"></script>
        <script defer src="~/content/script/ui.controls.js"></script>
    </environment>
    <environment names="Live">
        <script defer src="~/content/script/lib/jquery-3.3.1.min.js"></script>
        <script defer src="~/content/script/lib/jquery.validate.unobtrusive-3.2.10.min.js"></script>
        <script defer src="~/content/script/lib/materialize.min.js"></script>
        <script defer src="~/content/script/ui.controls.min.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>