<div class="container">
    <h1>@Texts["DataManagement"]</h1>
    <div class="row">
        <div class="col s12 m6">
            <div class="card grey lighten-5">
                <div class="card-content">
                    <span class="card-title">@Texts["UploadTemplateData"]</span>
                    <p>@Texts["SelectJson"]</p>
                    @using (Html.BeginForm("UploadData"))
                    {
                        <input type="file" name="file" text="@Texts["SelectFile"]" />
                        @await Html.LinkButtonAsync(Url.Action("Create"), Texts["List_CreateItem"].Value, "add")
                    }
                </div>
            </div>
        </div>
    </div>
</div>