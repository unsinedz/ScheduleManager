@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="vcenter-y">
    <div class="row">
        <div class="col s4 offset-s4 card z-depth-3">
            <div>
                <h2 class="center-align">Login</h2>
                <form method="post" action="/account/login" class="form-wrapped">
                    <div class="row">
                        <div class="input-field">
                            @Html.TextBoxFor(x => x.UserName, new { placeholder="Username", @class="validate" })
                            @Html.LabelFor(x => x.UserName)
                        </div>
                        <div class="input-field">
                            @Html.TextBoxFor(x => x.Password, new { placeholder="Password", @class="validate" })
                            @Html.LabelFor(x => x.Password)
                        </div>
                        <div class="input-field">
                            @Html.EditorFor(x => x.RememberMe)
                        </div>
                        <div class="center-align">
                            <button class="btn waves-effect waves-light" type="submit" name="action">Login
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>