@{
    ViewBag.Title = "Login";
}
<div class="vcenter-y">
    <div class="row">
        <div class="col s4 offset-s4 card z-depth-3">
            <div>
                <h2 class="center-align">Login</h2>
                <form method="post" action="/account/login" class="form-wrapped">
                    <div class="row">
                        <div class="input-field">
                            <input placeholder="Username" type="text" name="username" class="validate" />
                            <label for="username">Username</label>
                        </div>
                        <div class="input-field">
                            <input placeholder="Password" type="text" name="password" class="validate" />
                            <label for="password">Password</label>
                        </div>
                        <div class="center-align">
                            <button class="btn waves-effect waves-light" type="submit" name="action">Login
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>